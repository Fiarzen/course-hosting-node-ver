generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        Int       @id @default(autoincrement())
  name                      String?   
  email                     String    @unique
  password                  String
  role                      String    @default("STUDENT")
  authToken                 String?   @unique
  passwordResetToken        String?
  passwordResetTokenExpiry  DateTime?

  coursesAuthored           Course[]  @relation("CourseAuthor")
  enrollments               CourseEnrollment[]
  lessonProgress            LessonProgress[]
}

model Course {
  id                   Int       @id @default(autoincrement())
  title                String
  description          String
  restrictedToAllowList Boolean  @default(false)

  authorId             Int?
  author               User?     @relation("CourseAuthor", fields: [authorId], references: [id])

  lessons              Lesson[]
  enrollments          CourseEnrollment[]
  allowedEmails        CourseAllowedEmail[]
}

model CourseAllowedEmail {
  id       Int    @id @default(autoincrement())
  email    String

  courseId Int
  course   Course @relation(fields: [courseId], references: [id])

  @@unique([courseId, email])
}

model Lesson {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  videoUrl   String?
  pdfUrl     String?
  orderIndex Int?

  courseId   Int
  course     Course   @relation(fields: [courseId], references: [id])

  progress   LessonProgress[]
}

model CourseEnrollment {
  id        Int      @id @default(autoincrement())
  enrolledAt DateTime @default(now())

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id])

  @@unique([userId, courseId])
}

model LessonProgress {
  id          Int      @id @default(autoincrement())
  completed   Boolean  @default(false)
  completedAt DateTime?

  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  lessonId    Int
  lesson      Lesson   @relation(fields: [lessonId], references: [id])

  @@unique([userId, lessonId])
}
